<odoo>
    <record id="view_menu_item_form" model="ir.ui.view">
        <field name="name">industrial.menu.item.form</field>
        <field name="model">industrial.menu.item</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="cycle_id"/>
                        <field name="day_of_week"/>
                        <field name="company_id" groups="base.group_multi_company"/>
                    </group>
                    <group>
                        <field name="recipe_ids" widget="many2many_tags"/>
                        <field name="nutritional_info_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>