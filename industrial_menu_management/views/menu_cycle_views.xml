<odoo>
    <record id="view_menu_cycle_form" model="ir.ui.view">
        <field name="name">industrial.menu.cycle.form</field>
        <field name="model">industrial.menu.cycle</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="meal_type"/>
                        <field name="duration_weeks"/>
                        <field name="start_date"/>
                        <field name="end_date"/>
                        <field name="company_id" groups="base.group_multi_company"/>
                    </group>
                    <notebook>
                        <page string="Menu Items">
                            <field name="menu_items" widget="one2many_list"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <record id="view_menu_cycle_tree" model="ir.ui.view">
        <field name="name">industrial.menu.cycle.tree</field>
        <field name="model">industrial.menu.cycle</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="meal_type"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="company_id" groups="base.group_multi_company"/>
            </tree>
        </field>
    </record>
</odoo>