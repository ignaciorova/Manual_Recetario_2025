<odoo>
    <record id="view_portion_form" model="ir.ui.view">
        <field name="name">industrial.portion.form</field>
        <field name="model">industrial.portion</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="recipe_id"/>
                        <field name="portion_size"/>
                        <field name="ingredient_quantities"/>
                        <field name="company_id" groups="base.group_multi_company"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>