<odoo>
    <record id="rule_menu_cycle_company" model="ir.rule">
        <field name="name">Menu Cycle: Company Restriction</field>
        <field name="model_id" ref="industrial_menu_management.model_industrial_menu_cycle"/>
        <field name="domain_force">[('company_id', 'in', [user.company_id.id])]</field>
        <field name="groups" eval="[(4, ref('base.group_user'))]"/>
    </record>
